<div class="title row"> 
  <div class="col-md-12">
    <h2>
      Suppliers <%= link_to new_supplier_path, { class: 'btn btn-primary pull-right', role: 'button' } do %>
        <%= fa_icon "plus" %> New Supplier
      <% end %>
    </h2>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Supplier</th><th></th>
        </tr>  
      </thead>
      <tbody>
        <%= render suppliers %>      
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="text-center">
      <%= paginate suppliers %>
    </div>
  </div>
</div>

