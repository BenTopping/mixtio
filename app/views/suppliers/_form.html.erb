<%= form_for @supplier do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.label :product_code %>
      <%= f.text_field :product_code, { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.submit nil, { class: 'btn btn-primary' } %>
    </div>
<% end %>