<section class="container">
  <script type="text/javascript">
    Mixtio.Bootstrap.Printers  = <%= json_escape(LabelType.all.map { |l| [l.id, l.printers.map { |p| p.name }]}.to_h.to_json.html_safe) %>
  </script>

  <%= render "error_messages", target: @batch %>
  <div class="row">
    <div class="col-md-6">
      <h2>Batch <%= @batch.number %></h2>
    </div>
    <div class="col-md-6" style="margin-top: 20px">
      <% if (@batch.created_at != @batch.updated_at) %>
        <small class="pull-right">
          <%= "Updated by " + @batch.user.username %> (<%= @batch.kitchen.name %>) <%= time_ago_in_words(@batch.updated_at) %> ago
        </small><br>
      <% end %>
      <small class="pull-right">Created <%= "by " + @batch.user.username if (@batch.created_at == @batch.updated_at) %> at <%= @batch.created_at %></small>
    </div>
  </div>

  <h3>Information</h3>

  <ul>
    <li><strong>Consumable type: </strong><%= @batch.consumable_type.name %></li>
    <li><strong>Expiry date: </strong><%= @batch.expiry_date %></li>
    <li><strong>Storage conditions: </strong><%= @batch.consumable_type.storage_condition or 'None specified' %></li>
    <li><strike><strong>Barcode Type: </strong><% if @batch.single_barcode? %>One per batch<% else %>One per aliquot<% end %></strike></li>
  </ul>

  <h3>Ingredients</h3>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Ingredient</th><th>Lot/Batch Number</th><th>Supplier (Product Code)</th>
      </tr>
    </thead>

    <tbody>
      <% @batch.ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.consumable_type.name %></td>
        <td><%= ingredient.number %></td>
        <td><%= ingredient.kitchen.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <h3>Sub-Batches <small>Aliquot Groups</small></h3>
  <div class="row">
    <div class="col-md-5">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Quantity</th><th>Volume</th><th>Unit</th><th>Barcode Type</th><th>Print</th>
      </tr>
    </thead>

    <tbody>
      <% @batch.consumables.group(:sub_batch_id).each do |sub_batch| %>
        <tr>
          <td><%= @batch.consumables.group(:sub_batch_id).count[sub_batch.sub_batch_id] %></td>
          <td><%= sub_batch.volume %></td>
          <td><%= sub_batch.unit %></td>
          <td>?</td>
          <td>?</td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
</div>

  <div class="row">
    <div class="col-md-2">
      <% if @batch.editable? %>
        <%= button_to "Edit Batch", edit_batch_path(@batch), class: "btn btn-primary", method: :get %>
      <% end %>
    </div>
    <div class="col-md-offset-8 col-md-2">
      <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#printModal">
        Print Labels
      </button>
    </div>
  </div>

  <div class="modal fade" id="printModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Print labels for Batch <%= @batch.number %></h4>
        </div>
        <%= form_tag(print_path(@batch), method: "post", "data-behavior": "print_form") do %>
        <div class="modal-body">

          <div class="form-group">
            <%= label_tag :label_template_id %>
            <%= select_tag :label_template_id, options_for_select(LabelType.all.map { |type| [type.name, type.id] }, @batch.consumable_type.last_label_id ), class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= label_tag(:printer, "Printer") %>
            <%= select_tag :printer, options_from_collection_for_select(Printer.all, :name, :name), class: 'form-control' %>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= submit_tag "Print", class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</section>
