<div class="row">
  <div class="col-md-12">
    <h1>
      Consumable Batches <%= link_to new_batch_path, { class: 'btn btn-success btn-large pull-right', role: 'button' } do %>
        <%= fa_icon "plus" %> New Batch
      <% end %>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="text-center">
      <%= paginate batches %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <tr>
        <th>Consumable Type</th><th>Lot Name</th><th>Expiry Date</th><th>Supplier</th><th>Created</th>
      </tr>
      <%= render batches %>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="text-center">
      <%= paginate batches %>
    </div>
  </div>
</div>

