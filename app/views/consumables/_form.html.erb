<%= form_for(@consumable) do |f| %>
  <fieldset>
    <legend></legend>
    <ul>
      <li>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </li>
      <li>
        <%= f.label :expiry_date %>
        <%= f.date_field :expiry_date %>
      </li>
      <li>
        <%= f.label :lot_number %>
        <%= f.text_field :lot_number %>
      </li>
      <li>
        <%= f.label :arrival_date %>
        <%= f.date_field :arrival_date %>
      </li>
      <li>
        <%= f.label :supplier %>
        <%= f.text_field :supplier %>
      </li>
      <li>
        <%= f.label :consumable_type_id %>
        <%= f.select :consumable_type_id, options_from_collection_for_select(ConsumableType.all, :id, :name, @consumable.consumable_type_id) %>
      </li>
      <div data-behavior="parents">
        <%= f.hidden_field :parent_ids, value: "", data: { id: "parent_ids" }%>
        <li>
          <%= label_tag(:parent) %>
          <%= select_tag :parent, options_from_collection_for_select(Consumable.all, :id, :name), {include_blank: true} %>
          <%= link_to '+', "#", data: { behavior: "add_parent"}, title: "Add Parent" %>
        </li>
      </div>
      <li>
        <%= f.submit %>
      </li>
    </ul>
  </fieldset>
<% end %>
